{
  "name": "rokkonova-traffic-dashboard",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",

  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "dev:desktop": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },

  "build": {
    "appId": "com.rokkonova.traffic",
    "productName": "ROKKONOVA Traffic Dashboard",
    "files": [
      "dist/**/*",
      "main.js",
      "server.js",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  },

  "dependencies": {
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "date-fns": "^3.0.6",
    "express": "^4.18.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.10.3"
  },

  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "concurrently": "^9.2.0",
    "vite": "^5.4.2"
  }
}
